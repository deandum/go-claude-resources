# Multi-stage Dockerfile template - replace {{.AppName}} with your app name

FROM golang:1.24-alpine AS builder

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -ldflags="-s -w" -o /app/bin/server ./cmd/{{.AppName}}

FROM gcr.io/distroless/static:nonroot

COPY --from=builder /app/bin/server /usr/local/bin/server

USER nonroot:nonroot

EXPOSE 8080

ENTRYPOINT ["server"]
